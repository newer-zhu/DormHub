<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuhodor.app.mapper.AnnouncementMapper">

    <resultMap id="Announcement" type="com.zhuhodor.app.model.pojo.Announcement">
        <id property="id" column="id"/>
        <result property="nickName" column="nick_name"/>
        <result property="userId" column="user_id"/>
        <result property="content" column="content"/>
        <result property="confirm" column="confirm"/>
        <result property="delFlag" column="del_flag"/>
        <result property="delTime" column="del_time"/>
        <result property="publishTime" column="publish_time"/>
        <result property="title" column="title"/>
        <association property="user" column="user_id" select="com.zhuhodor.app.mapper.UserMapper.getUserVoById"></association>
        <association property="cover" column="id" select="getCoverByAnnoId"></association>
    </resultMap>

    <select id="getAnnouncements" resultMap="Announcement">
        SELECT pa.*
        FROM `p_announcement` pa
        ORDER BY pa.publish_time DESC
    </select>

    <select id="getFresh" resultMap="Announcement">
        SELECT id, title, publish_time, nick_name
        FROM p_announcement
        WHERE del_flag = 0
        ORDER BY publish_time DESC
        LIMIT 3
    </select>

    <select id="getCoverByAnnoId" parameterType="int" resultType="com.zhuhodor.app.model.vo.ImageVo">
        SELECT id, url FROM `p_image` WHERE announce_id = #{id}
    </select>

</mapper>
